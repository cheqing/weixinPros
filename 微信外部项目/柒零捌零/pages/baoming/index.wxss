
.shop-imgs-text, .shop-desc-text{
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx 0 40rpx;
  border-left: 3px solid #1C9C42;
  border-bottom: 1px solid #d0d0d0;
}

.shop-desc-info {
  font-size: 32rpx;
  padding: 20rpx 10rpx 20rpx 10rpx;
}

.shop-imgs-img {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 20rpx;
}

.shop-img-row {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center; 
  height: 200rpx;
  margin-top: 5rpx;
}
