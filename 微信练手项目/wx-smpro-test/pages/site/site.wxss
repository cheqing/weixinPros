page {
  width: 100%;
  height:100%;
  background-color: #F6F8F8;
  font-family:"微软雅黑"; 
  position:fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
}

.head {
  height:90rpx;
  padding:10rpx 20rpx;
  border-bottom: 1px solid #ececec;
}

.search-site {
  display:flex;
  flex-direction:row;
  align-items:center;
  width:100%;
  justify-content:space-between;
}

.search-input {
  background:#ececec;
  border-radius:8px;
  height:50rpx;
  padding:5rpx 20rpx;
  font-size:26rpx;
  width:70%;
  line-height:50rpx;
}

.search-btn {
  background:#ccc;
  height:60rpx;
  border-radius:12rpx;
  width:100rpx;
  font-size:28rpx;
  line-height:60rpx;
  text-align:center;
}

.curr-site {
  width:100%;
  height:80rpx;
  background:#fff;
  line-height:80rpx;
  text-align:center;
  font-size:30rpx;
}

.takeGoods-site {
  height:80rpx;
  line-height: 80rpx;
  /* width:92%; */
  display:flex;
  flex-direction:row;
  padding:0 20rpx;
  justify-content:space-between;
  font-size: 30rpx;
  background: #fff;
  margin-top: 20rpx;
  position: relative;
}

.add-icon {
  width:40rpx;
  height:40rpx;
  color:#ffd671;
  border-radius:50%;
  border:2px solid #ffd671;
  text-align:center;
  position:absolute;
  right:20rpx;
  top:16rpx;
  line-height:36rpx;
}

.site-list {
  /* height: 100%; */
  padding: 15rpx;
  position: fixed;
  top: 110rpx;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 999;
  overflow: auto;
  background: #fff;
}

.site-item {
  font-size:28rpx;
  height:100rpx;
  /* padding:10rpx 20rpx; */
  border-bottom:1px solid #ececec;
  line-height:50rpx;
}

.site-desc {
  color:#b0b0b0;
}