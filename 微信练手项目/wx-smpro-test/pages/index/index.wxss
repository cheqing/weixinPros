.lee {
  width: 100%;
  background-color: #F6F8F8;
}

.section {
  margin-bottom: 10rpx;
}

.lee_swiper {
  height: 300rpx;
  width: 100%;
}

.lee_swiper image {
  height: 100%;
  width: 100%;
}

.lee_menu {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-top: 30rpx;
  padding-bottom: 20rpx;
  
}

.menu_item{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  padding-bottom: 20rpx;
}

.lee_bd {
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.section_item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  border-radius: 15rpx;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
  padding-left: 12rpx;
  padding-right: 12rpx;
  background-color: #fff;
  border-bottom: 1px solid #d0d0d0
}

.section_infoLeft{
  width: 24%;
}

.section_infoLeft_img {
  width: 140rpx;
  height: 140rpx;
}

.section_infoRight {
  font-size: 26rpx;
  width: 76%;
}

.info_title {
  font-size:30rpx;
  font-weight:bold;
}

.info_price {
  color:#4BCC60;
}

.info_nums {
  float: right
}