<!--login.wxml-->
<view class="page">
  <view class='page_hd'>
    <view class='section'>
      <image src="../imgs/logo.jpg" style='border-radius:20%;width:200rpx;height:200rpx;'></image>
    </view>
  </view>
  <form bindsubmit='loginSubmit'>
    <view class='page_bd'>
      <view class='section'>
        <input type='text' name="email" placeholder='Email' auto-focus />
      </view>
      <view class='section'>
        <input password name="password" placeholder='password'/>
      </view>
      <view class='section'>
        <view class='btn-area'>
          <button type='primary' form-type='submit'>登录</button>
        </view>
      </view>
      <view class='section'>
        <view class='btn-area'>
          <button type='default'>新用户注册</button>
        </view>
      </view>
      <view class='section'>
        <view class='forget_password'>
          <!-- <button type='default' size='mini'>忘记密码</button> -->
          <text>忘记密码</text>
        </view>
      </view>
    </view>
  </form>
</view>  
