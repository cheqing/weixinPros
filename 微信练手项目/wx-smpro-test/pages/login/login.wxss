.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.page {
  min-height: 100%;
  flex: 1; 
  font-size: 32rpx;
  overflow: hidden
}

.page_hd {
  padding: 50rpx 50rpx 50rpx 50rpx;
  text-align: center;
}

.section {
  margin-bottom: 30rpx;
}

.page input {
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #ddd;
  background-color: #fff;
}

.btn-area{
  padding: 0 30px;
}

.forget_password {
  float: right;
}

.forget_password text {
  color: blue;
  padding: 0px 20rpx;
}