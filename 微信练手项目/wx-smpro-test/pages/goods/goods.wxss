.mask{
  width:100%;
  height:100%;
  background-color:rgba(15, 15, 26, 0.7);
  z-index:999;
  position:fixed; 
}

.mask-sort-list,.mask-filter-lists {
  height: 500rpx;
  background: #fff;
  font-size: 28rpx;
}

.mask-filter-lists {
  overflow: scroll;
}

.mask-sort-item {
  padding: 10rpx 30rpx;
}

.mask-sort-item-active {
  border-left:2px solid #FFC640;
  background:#ECECEC;
}

.mask-filter-feature-list {
  height: 200rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: center;
}

.mask-filter-feature-title, .mask-filter-discount-title {
  background: #fbfbfb;
  height:50rpx;
  font-size:30rpx;
  line-height:50rpx;
  font-weight:400;
  padding-left:30rpx;
  border-left:2px solid #FFC640; 
}

.feature-item {
  background: #fbfbfb;
  width:200rpx;
  font-size:32rpx;
  height:66rpx;
  line-height:66rpx;
  /* border:1px solid #ECECEC; */
  border-radius:30rpx;
  text-align:center;
  box-shadow: 1px 1px 1px #dedede;
  margin: 0 20rpx;
}

.feature-item-active {
  background:#FFFBF1;
  box-shadow:1px 1px 1px #FFE9B7;
  color:#FFE6B4;
}

.discount-item {
  height:80rpx;
  line-height:80rpx;
  border-bottom:1px solid #ECECEC;
  margin-left: 30rpx;
}

.discount-icon {
  padding:0 6rpx;
}

.discount-text {
  padding-left: 20rpx;
}

.discount-item-active {
  color: #FFC640;
}

.mask-filter-footer {
  display:flex;
  flex-direction:row;
  height:80rpx;
  line-height:80rpx;
  position:relative;

}

.mask-filter-footer-clear {
  width:70%;
  padding-left:30rpx;
  background: #fff;
  font-size: 30rpx;
}

.mask-filter-footer-finish {
  width:30%;
  background:#FFC640;
  text-align:center;
  font-weight:400;
  font-size: 34rpx;
  display:flex;
  flex-direction:row;
  justify-content:center;
}

.filter-filterSelected {
  width:30rpx;
  height:30rpx;
  background:#000;
  border-radius:50%;
  line-height:31rpx;
  color:#FFD161;
  margin-top:26rpx;
  font-size:24rpx;
  margin-left:10rpx;

}

.swiperList {
  width: 100%;
  height: 320rpx;
  font-size: 30rpx;
  background: #fff;
}

.swiperList swiper-item {
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  height: 90%;
}

.swiper-item-info {
  display: flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;
  width: 25%;
}

.head {
  display: flex;
  flex-direction: row;
  background-color: #FFC640;
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
}

.head-site {
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content:space-between;
  width: 40%;
  height: 40rpx;
  margin:auto 13rpx;
  background:#B38B2D;
  border-radius: 20rpx;
  padding: 5rpx 12rpx;
  color: white;
}

.head-site image {
  width: 30rpx;
  height: 30rpx;
}

.head-site text {
  padding-left: 8rpx;
  padding-right: 8rpx;
}

.head-site:after {
  content: '';
  width: 8rpx;
  height: 8rpx;
  border: 3rpx solid #fff;
  border-bottom: none;
  border-left: none;
  transform: rotate(45deg);
}

.head-search {
  display:flex;
  flex-direction:row;
  align-items:center;
  width: 50%;
  height: 40rpx;
  margin:auto 13rpx;
  background:#fff;
  border-radius: 20rpx;
  padding: 5rpx 12rpx;
  color: black;
}

.head-search image {
  width: 30rpx;
  height: 30rpx;
}

.head-search text {
  padding-left: 8rpx;
  padding-right: 8rpx;
}

.body-title {
  width:100%;
  height:60rpx;
  line-height: 60rpx;
  text-align:center;
  margin-top:20rpx;
  background:#fff;
  font-size:34rpx;
  font-weight: bold;
}

.sort-list {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width:100%;
  height:70rpx;
  line-height:70rpx;
  margin-top:4rpx;
  background:#fff;
  font-size:26rpx;
  border: 1px solid #ECECEC;
}

.sort {
  width: 25%;
  text-align: center;
  border-right: 1px solid #ECECEC;
}

.sort_active {
  font-weight: bold;
}

.sort image {
  width: 22rpx;
  height: 22rpx;
}

.shop-list {
  width: 100%;
  background: #fff;
}

.shop-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 190rpx;
  /* border-bottom: 1px solid #dedede; */
  box-shadow: 1px 1px 2px #dedede;
  padding: 10rpx 10rpx;
}

.shop-item-left {
  width: 30%;
  padding-left: 10rpx;
}

.shop-item-left image {
  width: 200rpx;
  height: 150rpx;
}

.shop-item-right {
  font-size: 26rpx;
  width: 70%;
}

.shop-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom:10rpx;
  display:block;
}

.shop-price {
  color:#58A2ED;
}

.shop-nums {
  float: right;
}











.slideBar {
  width: 100%;
  height: 100%;
  background-color: #F6F8F8;
  display: flex;
  flex-direction: row;
  border: 1px solid black;
}

.slideBar_left {
  width: 25%;
  height: 100%;
  text-align: center;
}

.slideBar_left_item {
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-bottom: 1px solid #dedede;
}

.slideBar_right {
  display:flex;
  flex-direction:row;
  width: 75%;
  height: 100%;
}

.slidebar_right_item {
  display:flex;
  flex-direction:column;
  /* justify-content:center;
  align-items:center;  */
  width:33.33%;
  text-align:center;

}

.slideBar_right image {
  width: 200rpx;
  height: 70rpx;
}

.slideBar_right text {
  font-size: 26rpx;
}

.section {
  margin-bottom: 10rpx;
}