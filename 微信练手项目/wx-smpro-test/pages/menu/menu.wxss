.page {
  width: 100%;
  background-color: #F6F8F8;
  font-family:"微软雅黑"; 
}

.menu {
  width:100%;
  height:100%;
  display:flex;
}

.menu-sidebar {
  width:22%;
  background:#F4F4F4;
  font-size:28rpx;
}

.menu-sidebar-item {
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  border-bottom:1px solid #ececec;
  width:100%;
}

.menu-foodList {
  width: 78%;
}

.menu-foodList-title {
  font-size: 24rpx;
}

.menu-foodList-item {
  width: 100%;
  display: flex;
  flex-direction:row;
  /*justify-content:flex-start;*/
  align-items:center;
  height: 180rpx;
  background: #fff;
}

.menu-foodList-item-img {
  width: 30%;
}

.menu-foodList-item image {
  width: 150rpx;
  height: 150rpx;
  margin-left: 15rpx;
}

.menu-foodList-item-info {
  width: 70%;
  font-size: 26rpx;
}

.food-name {
  font-size: 32rpx;
  font-weight: bold;
}

.food-sales {
  font-size: 28rpx;
}

.food-price {
  font-size: 30rpx;
}

.food-nums {
  font-size: 30rpx;
  float: right;
}

.section {
  margin-bottom: 10rpx;
}