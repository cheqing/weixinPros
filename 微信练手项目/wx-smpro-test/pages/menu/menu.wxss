.page {
  width: 100%;
  background-color: #F6F8F8;
  font-family:"微软雅黑"; 
}

.menu {
  width:100%;
  height:100%;
  display:flex;
}

.menu-sidebar {
  width:22%;
  background:#F4F4F4;
  font-size:28rpx;
  height: 1110rpx;
}

.menu-sidebar-item-active::before {
  /* border-left:2px solid #FFC640; */
  content: "";
  position: absolute;
  left: -1rpx;
  top: 24rpx;
  height: 36rpx;
  width: 8rpx;
  background: #FFD161;
}

.menu-sidebar-item {
  height:80rpx;
  line-height:80rpx;
  text-align:center;
  border-bottom:1px solid #ececec;
  width:100%;
  position: relative;
}


.menu-foodList {
  width: 78%;
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #ececec;
}

.menu-foodList-title {
  font-size: 24rpx;
  height:40rpx;
  line-height:40rpx;
  padding:10rpx 20rpx;
}

.menu-foodList-item {
  position: relative;
  width: 100%;
  display: flex;
  align-items:center;
  height: 180rpx;
  background: #fff;
  border-bottom: 1px solid #ececec;
}

.menu-foodList-item-img {
  width: 30%;
}

.menu-foodList-item image {
  width: 150rpx;
  height: 150rpx;
  margin-left: 15rpx;
}

.menu-foodList-item-info {
  width: 50%;
  font-size: 26rpx;
  padding-left: 10rpx;
}

.food-name {
  font-size: 32rpx;
  font-weight: bold;
}

.food-sales {
  font-size: 28rpx;
  color: #acacac;
}

.food-price {
  font-size: 30rpx;
  color: red;
}

 .menu-foodList-item-nums {
  width: 20%;
  /*height: 100%;*/
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  /*align-self: flex-end;*/
  /*align-items: flex-end;*/
  margin-top: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
} 

.reduce, .add {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border-color: #b0b0b0;
  line-height: 25rpx;
  text-align: center;
}

.reduce {
  border:2rpx;
  border-style: solid;
  box-sizing: border-box;
  font-size: 50rpx;
  line-height: 18rpx;
  margin-top: 8rpx;
  margin-right: 8rpx;
  color: #b0b0b0;
  border-color: #b0b0b0;
}

.text {
  font-size: 24rpx;
}

.add {
  margin-left: 8rpx;
  margin-top: 8rpx;
  background: #ffd161;
  font-size: 36rpx;
  line-height: 26rpx;
  margin-right: 20rpx;
}

.section {
  margin-bottom: 10rpx;
}