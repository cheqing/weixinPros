.page {
  width: 100%;
  height: 100%;
  background-color: #F6F8F8;
  font-family:"微软雅黑"; 
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  border: 0;
}

.mine-title {
  width:100%;
  height:400rpx;
  background:#ffd161;
  display:flex;
  flex-direction:column;
  align-items:center;
}

.title-headImg {
  margin-top: 100rpx;
}

.title-headImg image {
  width:160rpx;
  height:160rpx;
  border-radius:50%;
}

.mine-userInfo {
  font-size:30rpx;
  padding:10rpx 20rpx;
  background:#fff;
  margin-top:20rpx;
}

.quit {
  background:#fff;
  height:60rpx;
  margin-top:20rpx;
  text-align:center;
  line-height:60rpx;
  font-size:32rpx;
}