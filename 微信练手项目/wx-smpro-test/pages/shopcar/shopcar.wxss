.page {
  width: 100%;
  background-color: #FFF;
  font-family:"微软雅黑"; 
}

.order-title {
  height:80rpx;
  display:flex;
  justify-content:space-between;
  border-bottom:1px solid #ECECEC;
  font-size:30rpx;
  line-height:80rpx;
  padding:0 20rpx;
}

.title-cancelOrder {
  color: #b0b0b0;
}

.order-list {
  font-size:30rpx;
  height:200rpx;
  display:flex;
  padding:10rpx 10rpx;
  align-items:center;
  border-bottom:1px solid #ECECEC;
}

.order-list image {
  width: 200rpx;
  height: 140rpx;
}

.list-img {
  margin: 0 10rpx;
}

.list-info {
  margin-left: 20rpx;
}

.list-info-price {
  color: red;
}

.list-info-text {
  font-size: 26rpx;
}

.list-footer {
  display:flex;
  justify-content:flex-end;
  padding:0 20rpx;
  font-size:30rpx;
  height:100rpx;
  align-items:center;
}

.footer-orderAgain {
  width:200rpx;
  height:70rpx;
  border:1px solid #ECECEC;
  text-align:center;
  line-height:70rpx;
  margin-right: 20rpx
}

.footer-goComment {
  width:200rpx;
  height:70rpx;
  line-height:70rpx;
  text-align:center;
  background:#FFD161;
  border:1px solid #ECECEC;
}